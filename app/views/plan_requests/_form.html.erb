<%= back_url_hidden_field_tag %>
<%= error_messages_for 'plan_request' %>

<div class="box tabular">
  <p>
    <%= f.select :resource_id, resources_for_plan_request_select,
     :include_blank => false, :label => :field_planner_req_resource %>
  </p>
  <p>
    <%= f.select :task_id, @tasks.collect {|p| [ p.name, p.id ] },
     :include_blank => false, :label => :field_planner_task %>
  </p>
  <p>
    <%= f.select :priority, PlanRequest::priority_select, :label => :field_planner_req_prio %>
  </p>
  <p><%= f.text_field :description, :size => 60 %></p>
</div>
